    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lilayout_nav_drawer_main"
        android:layout_width="213dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/mypage_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventBlocker1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mypage_myimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/mypage_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/eventBlocker2"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:id="@+id/mypage_basket_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mypage_basket" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_movie_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mypage_movie" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_reco_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mypage_reco_movie" />
        </LinearLayout>

        <TextView
            android:id="@+id/eventBlocker3"
            android:layout_width="match_parent"
            android:layout_height="143dp" />

        <LinearLayout
            android:id="@+id/mypage_mypage_logout_btn"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:src="@drawable/mypage_logout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center">
            <ImageView
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:src="@drawable/mypage_setting_b" />
        </LinearLayout>


        <TextView
            android:id="@+id/eventBlocker4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
