<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lilayout_nav_drawer_main"
    android:layout_width="213dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@drawable/mypage_back"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/my_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:src="@drawable/mypage_myimage"/>
    <TextView
        android:id="@+id/mypage_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="username"
        android:textSize="10sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/mypage_basket_btn"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:src="@drawable/mypage_basket"
        android:layout_marginTop="83dp"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/mypage_movie_btn"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:src="@drawable/mypage_movie"
        android:layout_marginTop="11dp"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/mypage_reco_movie"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:src="@drawable/mypage_reco_movie"
        android:layout_marginTop="11dp"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/mypage_mypage_logout_btn"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:src="@drawable/mypage_logout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="193dp"/>
    <ImageView
        android:id="@+id/mypage_setting_btn"
        android:layout_width="53dp"
        android:layout_height="35dp"
        android:src="@drawable/mypage_setting_b"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>