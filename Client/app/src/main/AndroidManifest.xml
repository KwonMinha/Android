<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moviebasket.android.client">

    <application
        android:name=".global.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".login.LoginActivity" />
        <activity
            android:name=".join.JoinActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mypage.movie_pack_list.MoviePackActivity" />
        <activity android:name=".mypage.movie_rec_list.MovieRecActivity" />
        <activity android:name=".mypage.movie_pack_list.PackViewHolder"></activity>
    </application>

</manifest>