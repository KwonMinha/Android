    <ImageView
        android:id="@+id/movieImg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="30"
        android:src="@drawable/back"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30">

        <TextView
