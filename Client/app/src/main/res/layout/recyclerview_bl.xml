<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <!-- 바스켓 이미지 -->
        <ImageView
            android:id="@+id/basketImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/basket_img" />

        <!-- 텍스트이미지 -->
        <ImageView
            android:id="@+id/textImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/text_image" />

        <!-- 텍스트 -->
        <TextView
            android:id="@+id/basketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="우울할때 더 우울해지는 영화" />

        <RelativeLayout
            android:id="@+id/layout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- 다운로드이미지 -->
            <ImageView
                android:id="@+id/downBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/downCount"
                android:src="@drawable/down_btn" />

            <!-- 다운로드수 텍스트 -->
            <TextView
                android:id="@+id/downCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="1,886" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
